{
  "name": "codesuggestion-demo",
  "displayName": "CodeSuggestion-demo",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:go",
    "onLanguage:json",
    "onLanguage:markdown"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      { 
        "command": "extension.commit_message",
        "title": "Enter edit description"
      },
      { 
        "command": "extension.generate_remove_edit",
        "title": "Generate remove type edit"
      },
      { 
        "command": "extension.generate_add_edit",
        "title": "Generate add type edit"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus", 
          "command": "extension.commit_message", 
          "group": "code_suggestion@1"
        },
        {
          "when": "editorHasSelection", 
          "command": "extension.generate_remove_edit", 
          "group": "code_suggestion@1"
        },
        {
          "when": "editorHasSelection", 
          "command": "extension.generate_add_edit", 
          "group": "code_suggestion@1"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0"
  }
}
