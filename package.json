{
  "name": "co-ed-pilot",
  "displayName": "CoEdPilot",
  "description": "A code co-edit helper.",
  "version": "0.1.0",
  "publisher": "Code Philia",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-philia/CoEdPilot-extension.git"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "title": "CoEdPilot",
        "properties": {
          "coEdPilot.queryURL": {
            "type": "string",
            "default": "http://localhost:5003",
            "description": "The backend URL to send query request to."
          },
          "coEdPilot.predictLocationOnEditAcception": {
            "type": "boolean",
            "default": "true",
            "description": "Perform another prediction immediately when accpeting an edit."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "coEdPilot.inputMessage",
        "category": "CoEdPilot",
        "title": "Change Edit Description"
      },
      {
        "title": "Last Suggestion",
        "category": "CoEdPilot",
        "command": "coEdPilot.last-suggestion",
        "icon": "$(arrow-left)"
      },
      {
        "title": "Next Suggestion",
        "category": "CoEdPilot",
        "command": "coEdPilot.next-suggestion",
        "icon": "$(arrow-right)"
      },
      {
        "title": "Accept",
        "category": "CoEdPilot",
        "command": "coEdPilot.accept-edit",
        "icon": "$(pass)"
      },
      {
        "title": "Dismiss",
        "category": "CoEdPilot",
        "command": "coEdPilot.dismiss-edit",
        "icon": "$(trash)"
      },
      {
        "title": "Predict Locations",
        "category": "CoEdPilot",
        "command": "coEdPilot.predictLocations"
      },
      {
        "title": "Generate Edits",
        "category": "CoEdPilot",
        "command": "coEdPilot.generateEdits"
      },
      {
        "title": "Show Commands",
        "command": "coEdPilot.showCommands"
      },
      {
        "title": "Clear Locations",
        "command": "coEdPilot.clearLocations",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "coEdPilot.inputMessage",
          "group": "coEdPilot@3",
          "when": "editorFocus"
        },
        {
          "command": "coEdPilot.predictLocations",
          "group": "coEdPilot@1",
          "when": "editorFocus"
        },
        {
          "command": "coEdPilot.generateEdits",
          "group": "coEdPilot@2",
          "when": "editorFocus"
        }
      ],
      "editor/title": [
        {
          "command": "coEdPilot.last-suggestion",
          "group": "navigation@-4",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.next-suggestion",
          "group": "navigation@-3",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.accept-edit",
          "group": "navigation@-2",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.dismiss-edit",
          "group": "navigation@-1",
          "when": "coEdPilot:isEditDiff"
        }
      ],
      "view/title": [
        {
          "command": "coEdPilot.clearLocations",
          "when": "view == editLocations",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coEdPilot",
          "title": "CoEdPilot",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "coEdPilot": [
        {
          "id": "editLocations",
          "name": "Suggested Locations",
          "contextualTitle": "CoEdPilot"
        }
      ]
    },
    "keybindings": [
      {
        "command": "coEdPilot.predictLocations",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      },
      {
        "command": "coEdPilot.generateEdits",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorFocus"
      }
    ]
  },
  "type": "module",
  "scripts": {
    "test": "node ./test/suite/test.cjs",
    "watch": "tsc --watch --allowJs -p jsconfig.json",
    "build": "tsc --build jsconfig.json",
    "package": "yarn build && yes | vsce package --no-yarn",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/diff": "^5.0.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
    "@vscode/test-electron": "^2.3.0",
    "axios": "^1.6.0",
    "diff": "^5.1.0",
    "eslint": "^9.19.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-languageserver": "^8.1.0"
  }
}
