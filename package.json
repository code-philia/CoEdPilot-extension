{
  "name": "co-ed-pilot",
  "displayName": "CoEdPilot",
  "description": "A code co-edit helper.",
  "version": "0.1.0",
  "publisher": "Code Philia",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration":[
      {
        "title": "CoEdPilot",
        "properties": {
          "coEdPilot.queryURL": {
            "type": "string",
            "default": "http://localhost:5003",
            "description": "The backend URL to send query request to."
          },
          "coEdPilot.predictLocationOnEditAcception": {
            "type": "boolean",
            "default": "true",
            "description": "Perform another prediction immediately when accpeting an edit."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "coEdPilot.inputMessage",
        "category": "CoEdPilot",
        "title": "Change Edit Description",
        "icon": "$(comment)"
      },
      {
        "title": "Last Suggestion",
        "category": "CoEdPilot",
        "command": "coEdPilot.lastSuggestion",
        "icon": "$(arrow-left)"
      },
      {
        "title": "Next Suggestion",
        "category": "CoEdPilot",
        "command": "coEdPilot.nextSuggestion",
        "icon": "$(arrow-right)"
      },
      {
        "title": "Accept",
        "category": "CoEdPilot",
        "command": "coEdPilot.acceptEdit",
        "icon": "$(pass)"
      },
      {
        "title": "Dismiss",
        "category": "CoEdPilot",
        "command": "coEdPilot.dismissEdit",
        "icon": "$(trash)"
      },
      {
        "title": "Predict Locations",
        "category": "CoEdPilot",
        "command": "coEdPilot.predictLocations",
        "icon": "$(list-tree)"
      },
      {
        "title": "Generate Edits",
        "category": "CoEdPilot",
        "command": "coEdPilot.generateEdits",
        "icon": "$(edit)"
      },
      {
        "title": "Show Commands",
        "command": "coEdPilot.showCommands"
      },
      {
        "title": "Clear Locations",
        "command": "coEdPilot.clearLocations",
        "icon": "$(close)"
      },
      {
        "title": "Clear Edit Memory",
        "command": "coEdPilot.clearPrevEdits",
        "icon": "$(history)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "coEdPilot.inputMessage",
          "group": "coEdPilot@3",
          "when": "editorFocus"
        },
        {
          "command": "coEdPilot.predictLocations",
          "group": "coEdPilot@1",
          "when": "editorFocus"
        },
        {
          "command": "coEdPilot.generateEdits",
          "group": "coEdPilot@2",
          "when": "editorFocus && coEdPilot:isLanguageSupported"
        }
      ],
      "editor/title": [
        {
          "command": "coEdPilot.lastSuggestion",
          "group": "navigation@-4",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.nextSuggestion",
          "group": "navigation@-3",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.acceptEdit",
          "group": "navigation@-2",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.dismissEdit",
          "group": "navigation@-1",
          "when": "coEdPilot:isEditDiff"
        },
        {
          "command": "coEdPilot.predictLocations",
          "group": "navigation@-99",
          "when": "editorFocus && (!(coEdPilot:isEditDiff)) && coEdPilot:isLanguageSupported"
        },
        {
          "command": "coEdPilot.generateEdits",
          "group": "navigation@-98",
          "when": "editorFocus && (!(coEdPilot:isEditDiff)) && coEdPilot:isLanguageSupported"
        },
        {
          "command": "coEdPilot.inputMessage",
          "group": "navigation@-97",
          "when": "editorFocus && (!(coEdPilot:isEditDiff)) && coEdPilot:isLanguageSupported"
        },
        {
          "command": "coEdPilot.clearPrevEdits",
          "group": "navigation@-96",
          "when": "(!(coEdPilot:isEditDiff)) && coEdPilot:isLanguageSupported"
        }
      ],
      "view/title": [
        {
          "command": "coEdPilot.clearLocations",
          "when": "view == editLocations",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coEdPilot",
          "title": "CoEdPilot",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "coEdPilot": [
        {
          "id": "editLocations",
          "name": "Suggested Locations",
          "contextualTitle": "CoEdPilot"
        }
      ]
    },
    "keybindings": [
      {
        "command": "coEdPilot.predictLocations",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      },
      {
        "command": "coEdPilot.generateEdits",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "test": "node ./test/suite/test.js",
    "watch": "tsc --watch --allowJs -p jsconfig.json"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "@types/diff": "^5.0.8",
    "@vscode/test-cli": "^0.0.4"
  },
  "dependencies": {
    "@vscode/test-electron": "^2.3.0",
    "axios": "^1.6.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "diff": "^5.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}
