{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": "import",
                "format": [ "camelCase", "PascalCase" ]
            }
        ],
        "semi": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "curly": "off",
        "eqeqeq": ["error", "always"],
        "no-throw-literal": "warn",
        "no-console": "warn"
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts",
        "web"
    ]
}
